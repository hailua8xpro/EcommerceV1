@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{

    <div class="block-recently-viewed-products">
        <h3 class="mb-3">@T("Products.RecentlyViewedProducts")</h3>
        <div class="recentlyviewed-slider p-3">
            @foreach (var p in Model)
            {
                <div class="rcv-item">
                    @if (!string.IsNullOrEmpty(p.DefaultPictureModel.ImageUrl))
                    {
                        <a class="product-picture" href="@Url.RouteUrl("Product", new { SeName=p.SeName })" title="@p.Name">
                            <img alt="@p.DefaultPictureModel.AlternateText" src="@p.DefaultPictureModel.ImageUrl" title="@p.Name" />
                        </a>
                    }
                </div>
            }

        </div>

    </div>
}
<script asp-location="Footer">
    $(document).ready(function () {
        $('.recentlyviewed-slider').slick({
            slidesToShow: 8,
            slidesToScroll: 8,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 6,
                        slidesToScroll: 6,
                        infinite: true,
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 4,
                        slidesToScroll: 4
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                }
            ]
        });
    });
</script>
