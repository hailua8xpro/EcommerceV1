@model IList<BannerModel>
<div class="home-main-slider main-slider">
    @foreach (var item in Model)
    {
        @if (item.ShowCaption)
        {
            <div class="item-slider" style="height: 400px; display: block; background: url('@item.ImageUrl') no-repeat center center; background-size: cover;">
                <div class="container">
                    <div class="block-content">
                        <div class="block-center">
                            @Html.Raw(item.Caption)
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="item-slider">
                <a href="@item.Url" title="@item.Title">
                    <img src="@item.ImageUrl" alt="@item.Title" title="@item.Title" />
                </a>
            </div>
        }
    }
</div>

<script asp-location="Footer">
    $(document).ready(function () {
        $('.home-main-slider').slick({
            autoplay: true,
            accessibility: true
        });
    });
</script>
