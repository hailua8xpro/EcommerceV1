@model List<TestimonialModel>
@if (Model.Count > 0)
{
    <div class="homepagetestimonial">
        <div class="container">
            <div class="homepagetestimonial-head">
                <h3>@T("Testimonial")</h3>
            </div>
            <div class="row">
             @foreach (var test in Model)
                {
                 <div class="col-md-6">
                     <div class="testimonial">
                         <img src="@test.PictureModel.ImageUrl" alt="@test.FullName" />
                         <div class="name"><strong>@test.FullName</strong>/ @test.Description</div>
                         <div class="text">
                             @Html.Raw(test.FullDescription)
                         </div>
                     </div>
                 </div>
                }
            </div>
        </div>
    </div>
}