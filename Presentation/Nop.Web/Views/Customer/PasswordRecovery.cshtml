@model PasswordRecoveryModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
    //page class
    Html.AppendPageCssClassParts("html-password-recovery-page");
}
<div class="page password-recovery-page py-4">
    <div class="container">
        <div class="page-title text-center">
            <h1>@T("Account.PasswordRecovery")</h1>
        </div>
        <div class="page-body">
            <div class="row">
                <div class="col-md-6 offset-md-3 bg-gray border-top py-3">
                    @if (!string.IsNullOrEmpty(Model.Result))
                    {
                        <div class="result">
                            @Model.Result
                        </div>
                    }
                                <form asp-route="PasswordRecovery" method="post">
                                    <div asp-validation-summary="ModelOnly" class="message-error"></div>
                                    <p>@T("Account.PasswordRecovery.Tooltip")</p>
                                    <div class="fieldset">
                                        <div class="form-fields">
                                            <div class="inputs row my-3">
                                                <div class="col-md-3"><label asp-for="Email" asp-postfix=":"></label></div>
                                                <div class="col-md-9">
                                                    <input asp-for="Email" class="email form-control with-required" />
                                                    <nop-required />
                                                    <span asp-validation-for="Email"></span>
                                                </div>
                                            </div>
                                        </div>
                                        @if (Model.DisplayCaptcha)
                                        {
                                            <div class="captcha-box">
                                                <nop-captcha />
                                            </div>
                                        }
                                    </div>
                                    <div class="row">
                                        <div class="col-md-9 offset-md-3"> <input type="submit" name="send-email" class="btn btn-primary btn-main password-recovery-button" value="@T("Account.PasswordRecovery.RecoverButton")" /></div>
                                    </div>
                                </form>
                            </div>
            </div>
        </div>
    </div>
</div>