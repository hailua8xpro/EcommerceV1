@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    <div class="compare-products d-inline-block">
        <a href="javascipt:" title="@T("Products.Compare.AddToCompareList")" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;">
            <span class="mbi mbi-chart-bars"></span>
        </a>
    </div>
}